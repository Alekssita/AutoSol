RewriteEngine On

# Главная страница по умолчанию (пусть будет испанская)
DirectoryIndex index_es.html

# Чистые URL -> нужный файл
RewriteRule ^es/?$ index_es.html [L]
RewriteRule ^ru/?$ index_ru.html [L]
RewriteRule ^ua/?$ index_ua.html [L]

# Если кто-то зашёл явно на index_es.html, index_ru.html или index_ua.html — редиректим на чистый URL
RewriteCond %{THE_REQUEST} \s/index_es\.html [NC]
RewriteRule ^index_es\.html$ /es [R=301,L]

RewriteCond %{THE_REQUEST} \s/index_ru\.html [NC]
RewriteRule ^index_ru\.html$ /ru [R=301,L]

RewriteCond %{THE_REQUEST} \s/index_ua\.html [NC]
RewriteRule ^index_ua\.html$ /ua [R=301,L]